<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg_dashboard_atas"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_hasil_permintaan"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/icon_hasil_permintaan"
                        android:textColor="@color/white"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/nama_akun_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:layout_marginRight="5dp"
                        android:text="Nama Akun"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                         />

                    <TextView
                        android:id="@+id/btn_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text=""
                        android:drawableRight="@drawable/icon_profile"
                        android:textColor="@color/white"
                        android:layout_gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/nama_lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lokasi"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/icon_lokasi"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_shadow"
                android:paddingBottom="10dp">
                <Button
                    android:id="@+id/btn_permintaan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_radius"
                    android:backgroundTint="@color/blue"
                    android:text="Permintaan pertolongan"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

            </LinearLayout>



                <EditText
                    android:id="@+id/txt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/my_edit_text_border"
                    android:drawableRight="@drawable/icon_search"
                    android:drawablePadding="10dp"
                    android:hint="Cari Rumah Sakit"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:padding="10dp" />

                <ListView
                    android:id="@+id/listViewRumahSakit"
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:listitem="@layout/list_rumahsakit_dashboard"/>


            </LinearLayout>










</LinearLayout>